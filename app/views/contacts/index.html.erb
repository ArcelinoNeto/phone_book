<h1>Contacts</h1>

<div style="margin: 0 3%">
	<table style="width: 100%;" cellspacing="0" cellpadding="0">
		<tbody>
            <tr>
                <td><%= link_to "Inicio", root_path %></td>
                <td><%= current_user.email %></td>
                <td><%= link_to "Sair", destroy_user_session_path, method: :delete %></td>
                <td></td>
                <td><%= link_to "Novo Contato", new_contact_path%></td>
            </tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>Telefone</th>
            <th></th>
            <th></th>
		    <tr><td style="height: 5px;" colspan="6"></td></tr>
		    <tr><td style="border-top: solid 1px #000000; height: 5px;" colspan="6"></td></tr>
            <% @contacts.each do |contact| %>
            <tr>
                <td><%= contact.id %></td>
                <td><%= contact.name %></td>
                <td><%= contact.last_name %></td>
                <td><%= contact.number %></td>
                <td><%= link_to "Edit", edit_contact_path(contact) %></td>
                <td>remover</td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>